<p id="notice"><%= notice %></p>

<%= turbo_frame_tag 'course-lessons-list' do%>
<h1>Lessons</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.course_id %></td>
        <td><%= lesson.title %></td>
        <td><%= lesson.content %></td>
        <td><%= link_to 'Show', [@course, lesson], target: '_top' %></td>
        <td><%= link_to 'Edit', edit_course_lesson_path(@course, lesson), target: '_top' %></td>
        <td><%= link_to 'Destroy', [@course, lesson], target: '_top', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end%>
<br>

<%= link_to 'Courses', courses_path(@course) %>
<%= link_to 'New Lesson', new_course_lesson_path %>
